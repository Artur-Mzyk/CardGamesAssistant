<MenuScreen>:
    GridLayout:
        id: main_layout
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        rows: 2
        cols: 2
        BoxLayout:
            canvas:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 2
            orientation: "vertical"
            padding: 10
            size_hint_y: main_layout.height * 0.7
            GridLayout:
                id: user_layout
                rows: 1
                cols: 1
                Image:
                    id: table_img
                    allow_stretch: True
                    keep_ratio: False
        BoxLayout:
            canvas:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 2
            orientation: "vertical"
            padding: 10
            size_hint_y: main_layout.height * 0.7
            GridLayout:
                id: cards_layout
                rows: 0
                cols: 3
