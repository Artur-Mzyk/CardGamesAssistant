<MenuScreen>:
    GridLayout:
        id: main_layout
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        rows: 2
        cols: 2
        BoxLayout:
            id: img_layout
            canvas:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 2
            orientation: "vertical"
            size_hint_x: main_layout.width * 0.5
            size_hint_y: main_layout.height * 0.7
            Image:
                id: table_img
                fit_mode: "fill"
        BoxLayout:
            canvas:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 2
            orientation: "vertical"
            size_hint_x: main_layout.width * 0.5
            size_hint_y: main_layout.height * 0.7
        BoxLayout:
            canvas:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 2
            orientation: "vertical"
            size_hint_x: main_layout.width * 0.5
            size_hint_y: main_layout.height * 0.3
            GridLayout:
                id: cards_layout
                rows: 1
                cols: 3
        BoxLayout:
            canvas:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 2
            orientation: "vertical"
            size_hint_x: main_layout.width * 0.5
            size_hint_y: main_layout.height * 0.3
